<%= form_for @blog do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :body %>
  <%= f.text_field :body, class: "form-control" %>

  <%= f.label :user_id %>
  <%= f.text_field :user_id, class: "form-control" %>
  <br>
  <%= f.submit "Create New Post", class: "btn btn-default" %>
<% end %>